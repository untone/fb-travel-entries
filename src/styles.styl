*
  box-sizing border-box

html,
body
  margin 0
  padding 0
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'

body
  margin 1rem auto
  max-width 50rem
  min-width 30rem
  font-size .875rem

main
  display flex
  align-items center
  flex-direction column

  form
    padding 1rem
    width 100%
    flex-direction column

    aside
      margin 0 0 1rem
      flex-basis 100%

    textarea
      min-height 10rem
      margin 0 0 1rem

    button
      margin 0 0 1rem
      min-height 2rem

      &:last-of-type
        margin-bottom 0

article
  margin 0 0 1rem
  padding 0
  width 100%
  box-shadow 0 0 3px 0 rgba(#333, .25)

  header
    margin 0
    padding 1.25rem 1rem 1rem
    display flex
    align-items center
    justify-content space-between
    border-bottom 1px solid rgba(#333, .25)

    h2
      margin 0
      padding 0
      font-size 1rem
      font-weight 400

      span
        display inline-block
        vertical-align text-bottom !important
        margin-left .5rem

    aside
      margin-left auto

  figure
    padding 1.25rem 1rem

form
  margin 0
  display flex

  aside
    display flex
    flex-direction column
    margin 0 1rem 0 0
    flex-basis 30%

    .react-datepicker-wrapper
    .react-datepicker__input-container
      width 100%
      height 2rem
      padding 0

      input
        box-sizing border-box
        width 100%
        padding .25rem .5rem
        height 2.25rem
        border 1px solid rgb(204, 204, 204)
        border-radius 3px

    .react-datepicker-wrapper
      margin 0 0 1rem

    .react-datepicker-wrapper + div
      width 100%
      font-size .75rem
      max-height 2.25rem
      margin 0
      padding 0

  textarea
    flex-grow 1
    box-sizing border-box
    width 100%
    padding .25rem .5rem
    border 1px solid rgb(204, 204, 204)
    border-radius 3px

  button
    margin 0 0 0 1rem
    padding 0 1rem
    max-height 3rem
    background-color #fff
    border 1px solid rgb(204, 204, 204)
    border-radius 3px
    white-space nowrap
